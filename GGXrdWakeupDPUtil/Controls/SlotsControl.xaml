<UserControl x:Class="GGXrdWakeupDPUtil.Controls.SlotsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="uc"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="{Binding GroupName,ElementName=uc}">
        <StackPanel Orientation="Horizontal">
            <RadioButton x:Name="RadioButton1" Checked="RadioButton1_Checked" IsChecked="True">Slot 1</RadioButton>
            <RadioButton x:Name="RadioButton2" Checked="RadioButton2_Checked">Slot 2</RadioButton>
            <RadioButton x:Name="RadioButton3" Checked="RadioButton3_Checked">Slot 3</RadioButton>
        </StackPanel>
    </GroupBox>
</UserControl>
