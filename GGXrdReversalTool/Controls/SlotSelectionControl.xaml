<local:NotifiedUserControl x:Class="GGXrdReversalTool.Controls.SlotSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GGXrdReversalTool.Controls"
             mc:Ignorable="d" 
             x:Name="uc"
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="{Binding GroupName,ElementName=uc}">
        <UniformGrid Columns="3" VerticalAlignment="Center">
            <RadioButton Content="Slot 1" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="OnRadioButtonChecked" IsChecked="{Binding IsChecked[0],ElementName=uc}" Tag="1"/>
            <RadioButton Content="Slot 2" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="OnRadioButtonChecked" IsChecked="{Binding IsChecked[1],ElementName=uc}" Tag="2"/>
            <RadioButton Content="Slot 3" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="OnRadioButtonChecked" IsChecked="{Binding IsChecked[2],ElementName=uc}" Tag="3"/>
        </UniformGrid>
    </GroupBox>
</local:NotifiedUserControl>
