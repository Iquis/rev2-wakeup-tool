<UserControl x:Class="GGXrdReversalTool.Controls.SlotsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="uc"
             mc:Ignorable="d" 
             d:DesignHeight="46" d:DesignWidth="800" MinHeight="46">
    <GroupBox Header="{Binding GroupName,ElementName=uc}">
        <UniformGrid Columns="3">
            <RadioButton x:Name="RadioButton1" Content="Slot 1" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RadioButton1_Checked" IsChecked="True"/>
            <RadioButton x:Name="RadioButton2" Content="Slot 2" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RadioButton2_Checked"/>
            <RadioButton x:Name="RadioButton3" Content="Slot 3" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RadioButton3_Checked"/>
        </UniformGrid>
    </GroupBox>
</UserControl>
