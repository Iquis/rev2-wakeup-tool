<UserControl x:Class="GGXrdReversalTool.Controls.EnableDisableScenarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GGXrdReversalTool.Controls"
             x:Name="Control"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="800">
    <UniformGrid Height="30" Columns="2">
        <Button Margin="0,0,10,0" Content="Enable" Command="{Binding ElementName=Control, Path=EnableCommand}" />
        <Button Margin="10,0,0,0" Content="Disable" Command="{Binding ElementName=Control, Path=DisableCommand}"/>
    </UniformGrid>
</UserControl>
